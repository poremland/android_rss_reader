<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.App" parent="Theme.AppCompat.Light.DarkActionBar">
	</style>
	<style name="FeedTitle">
		<item name="android:textColor">@color/black</item>
		<item name="android:gravity">left</item>
		<item name="android:textSize">16sp</item>
		<item name="android:singleLine">true</item>
		<item name="android:paddingBottom">2dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="FeedMetaData">
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">10sp</item>
		<item name="android:singleLine">true</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="FeedUrl" parent="FeedMetaData">
		<item name="android:textColor">@color/dark_blue</item>
	</style>
	<style name="FeedDate" parent="FeedMetaData">
	</style>
	<style name="FeedDescription" parent="FeedMetaData">
		<item name="android:textSize">12sp</item>
	</style>
	<style name="ListRow">
		<item name="android:background">@color/list_row_background</item>
		<item name="android:orientation">vertical</item>
		<item name="android:paddingLeft">4dp</item>
		<item name="android:paddingRight">4dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
	</style>
	<style name="FeedRow" parent="ListRow">
		<item name="android:background">@drawable/row_background</item>
	</style>
	<style name="ListStyle">
		<item name="android:background">@color/list_background</item>
		<item name="android:divider">@color/list_divider_background</item>
		<item name="android:dividerHeight">2dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:drawSelectorOnTop">false</item>
	</style>
</resources>
